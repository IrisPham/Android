<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="45dp"
    tools:context="com.example.visualstudio.simpleactivity.demoservice.activitys.ServiceIntentActivity">


    <ProgressBar style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:max="100"/>

    <TextView
        android:id="@+id/tv_Percel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Percent" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_StartService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Start Intent Service"
        android:onClick="onClickBtnStartService" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_StopService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Stop Intent Service"
        android:onClick="onClickBtnStopService"/>

</LinearLayout>
