<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/activity_content_provider_edt_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Name"/>
    <EditText
        android:id="@+id/activity_content_provider_edt_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="id"/>
    <EditText
        android:id="@+id/activity_content_provider_edt_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="address"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/activity_content_provider_edt_saveInfo"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Save">
        </com.gc.materialdesign.views.ButtonRectangle>
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/activity_content_provider_edt_showinfo"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Show info"></com.gc.materialdesign.views.ButtonRectangle>
    </LinearLayout>
    <TextView
        android:id="@+id/activity_content_provider_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>
