<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.visualstudio.simpleactivity.LoginActivity">
    
    <EditText
        android:id="@+id/activity_login_edt_userName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nhập đoạn chuỗi test Intent explicit"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_intentExplicit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Intent explicit"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnIntentExplicit"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_intentImplicit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnImplicit"
                    android:text="Intent implicit" />
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_intentForResult"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnIntentForResult"
                    android:text="Intent For Result" />
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_intentCamera"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Intent Camera"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnIntentCamera"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_contentProvider"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Content Provider"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnContentProvider"/>
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_service"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnService"/>
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_BroadCast"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="BroadCast"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickBtnBroadCast"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/activity_login_btn_sqlite"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="SQLite"
                    android:visibility="visible" />
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/button_webService"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="WebService"
                    android:onClick="onClickBtnWebService"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
